<body>
<script src="/socket.io/socket.io.js"></script>
<script>
	var socket = io();
</script>
<center>

<script>


document.addEventListener('keydown', function(event) {
    if (event.keyCode == 38) {
      socket.emit('forstart'); 
    }
   }, true);

document.addEventListener('keyup', function(event) {
    if (event.keyCode == 38) {
      socket.emit('forstop');
    }
   }, true);

 document.addEventListener('keydown', function(event) {
    if (event.keyCode == 40) {
      socket.emit('backstart'); 
    }
   }, true);

document.addEventListener('keyup', function(event) {
    if (event.keyCode == 40) {
      socket.emit('backstop');
    }
   }, true);

document.addEventListener('keydown', function(event) {
    if (event.keyCode == 37) {
      socket.emit('leftstart'); 
    }
   }, true);

document.addEventListener('keyup', function(event) {
    if (event.keyCode == 37) {
      socket.emit('leftstop');
    }
   }, true);

 document.addEventListener('keydown', function(event) {
    if (event.keyCode == 39) {
      socket.emit('rightstart'); 
    }
   }, true);

document.addEventListener('keyup', function(event) {
    if (event.keyCode == 39) {
      socket.emit('rightstop');
    }
   }, true);


</script>
<div class="container">
<br>
<center><iframe src="http://192.168.205.103:8010/" height="400px" width="40%"></iframe>	</center><br>
<button type="button" class="btn btn-primary" onmousedown="socket.emit('forstart');" onmouseup="socket.emit('forstop');" >Forward</button><br><br>
<button type="button" class="btn btn-primary" onmousedown="socket.emit('leftstart');" onmouseup="socket.emit('leftstop');">Left</button> &nbsp&nbsp&nbsp&nbsp&nbsp
<button type="button" class="btn btn-primary" onmousedown="socket.emit('backstart');" onmouseup="socket.emit('backstop');">Backward</button>&nbsp&nbsp&nbsp&nbsp&nbsp
<button type="button" class="btn btn-primary" onmousedown="socket.emit('rightstart');" onmouseup="socket.emit('rightstop');">Right</button><br><br>
<p>Control panel</p>


</div>
</center>
</body>
</html>
